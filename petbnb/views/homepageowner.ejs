<%- include('header'); -%>
<div class="container">
    <form action="/login" method="get">
        <button class="mdc-button mdc-button--unelevated log-out">
            <div class="mdc-button__ripple"></div>
            <span class="mdc-button__label">Sign out</span>
        </button>
    </form>
    <div class="home-container">
        <div class="home-hero">
            <img src="/assets/doggie.gif" alt="dog" id="dog-gif">
        </div>
        <h1>Hi <%= current_user["name"] %>,</h1>
        <h2>Welcome to Petbnb!</h2>
        <h3>üê±üê∂Your profile</h3>
        <ul class="mdc-list mdc-list--two-line">
            <li role="separator" class="mdc-list-divider"></li>
            <a href="/pets">
                <li class="mdc-list-item" tabindex="0">
                    <span class="mdc-list-item__text">
                    <span class="mdc-list-item__primary-text">Your pets</span>
                    <span class="mdc-list-item__secondary-text">Add or edit details about your pets.</span>
                    </span>
                </li>
            </a>
            <li role="separator" class="mdc-list-divider"></li>
            <a href="/profile">
                <li class="mdc-list-item">
                    <span class="mdc-list-item__text">
                        <span class="mdc-list-item__primary-text">Your profile</span>
                        <span class="mdc-list-item__secondary-text">View and edit details about your profile.</span>
                    </span>
                </li>
            </a>
            <li role="separator" class="mdc-list-divider"></li>
        </ul>
        <h3>üìÜBookings</h3>
        <ul class="mdc-list mdc-list--two-line">
            <li role="separator" class="mdc-list-divider"></li>
            <a href="/searchList">
                <li class="mdc-list-item">
                    <span class="mdc-list-item__text">
                    <span class="mdc-list-item__primary-text">Make a booking</span>
                    <span class="mdc-list-item__secondary-text">Find a pet sitter, and make a booking for your pet.</span>
                    </span>
                </li>
            </a>
            <li role="separator" class="mdc-list-divider"></li>
            <a href="/pastBookings">
                <li class="mdc-list-item">
                    <span class="mdc-list-item__text">
                    <span class="mdc-list-item__primary-text">Your bookings</span>
                    <span class="mdc-list-item__secondary-text">View your bookings and leave reviews.</span>
                    </span>
                </li>
            </a>    
            <li role="separator" class="mdc-list-divider"></li>
            <a href="/promoCodes">
                <li class="mdc-list-item">
                    <span class="mdc-list-item__text">
                    <span class="mdc-list-item__primary-text">Apply a promo code</span>
                    <span class="mdc-list-item__secondary-text">Apply a promo code to an upcoming booking.</span>
                    </span>
                </li>
            </a>    
        <li role="separator" class="mdc-list-divider"></li>
        </ul>
    </div>
</div>
<%- include('footer'); -%>