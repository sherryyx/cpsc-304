<%- include('header'); -%>
<!DOCTYPE html>
<html>
  <head>
    <title>Results</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
      <div class="home-container" >
      <section class="home">
          <div class="mdc-data-table">
              <table class="mdc-data-table__table" aria-label="Dessert calories">
                <thead>
                  <tr class="mdc-data-table__header-row">
                    <th class="mdc-data-table__header-cell" role="columnheader" scope="col">service_id</th>
                    <th class="mdc-data-table__header-cell" role="columnheader" scope="col">priceper</th>
                    <th class="mdc-data-table__header-cell" role="columnheader" scope="col">user_id</th>
                    <th class="mdc-data-table__header-cell" role="columnheader" scope="col">servicetype</th>
                  </tr>
                </thead>
                <tbody class="mdc-data-table__content">
                  <% for(var i=0; i<results.length; i++) {%>
                    <form action="/bookService" method="post" class="form-container">
                      <tr class="mdc-data-table__row">
                        <td class="mdc-data-table__cell"><%= results[i].service_id %></td>
                        <td class="mdc-data-table__cell"><%= results[i].priceper %></td>
                        <td class="mdc-data-table__cell"><%= results[i].user_id %></td>
                        <td class="mdc-data-table__cell"><%= results[i].servicetype %></td>
                        <td class="mdc-data-table__cell">
                        <input class="mdc-text-fielsd__input" type="hidden" aria-labelledby="my-label-id" id="pet_id1" name="service_id" value = <%= results[i].service_id %>>
                        <input class="mdc-text-fielsd__input" type="hidden" aria-labelledby="my-label-id" id="pet_id1" name="priceper" value = <%= results[i].priceper %>>
                        <input class="mdc-text-fielsd__input" type="hidden" aria-labelledby="my-label-id" id="pet_id1" name="user_id" value = <%= results[i].user_id %>>
                        <input class="mdc-text-fielsd__input" type="hidden" aria-labelledby="my-label-id" id="pet_id1" name="servicetype" value = <%= results[i].servicetype %>>
                        <button class="mdc-button mdc-button--unelevated">
                            <div class="mdc-button__ripple"></div>
                            <span class="mdc-button__label">Book Service</span>
                        </button></td>
                      </tr>
                    </form>
                  <% } %>
                </tbody>
              </table>
            </div>
      </section>
      </div>
  </body>
</html>
<%- include('footer'); -%>
