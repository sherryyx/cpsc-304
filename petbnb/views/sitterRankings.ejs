<%- include('header'); -%>
<div class="container">
<form action="/searchList" method="get" class="back-button">
  <button class="mdc-fab" aria-label="back">
      <div class="mdc-fab__ripple"></div>
      <span class="mdc-fab__icon material-icons">keyboard_backspace</span>
  </button>
</form>
    <div class="home-container">
      <h1>Highly rated pet sitters</h1>
      <h2>Find pet sitters with the highest ratings</h2>
    <section class="ranking-container">
        <div class="mdc-data-table">
            <table class="mdc-data-table__table" aria-label="Dessert calories">
              <thead>
                <tr class="mdc-data-table__header-row">
                  <th class="mdc-data-table__header-cell" role="columnheader" scope="col">Name</th>
                  <th class="mdc-data-table__header-cell" role="columnheader" scope="col">Average Rating</th>
                </tr>
              </thead>
              <tbody class="mdc-data-table__content">
                <% for(var i=0; i<results.length; i++) {%>
                  <form action="<%= `/petsitter/${results[i].user_id}` %>" method="get" class="form-container">
                    <tr class="mdc-data-table__row">
                      <td class="mdc-data-table__cell"><%= results[i].name %></td>
                      <td class="mdc-data-table__cell"><%= parseFloat(results[i].avg).toFixed(2) %></td>
                      <td class="mdc-data-table__cell">
                      <input class="mdc-text-fielsd__input" type="hidden" aria-labelledby="my-label-id" id="pet_id1" name="user_id" value = <%= results[i].user_id %>>
                      <input class="mdc-text-fielsd__input" type="hidden" aria-labelledby="my-label-id" id="pet_id1" name="servicetype" value = <%= results[i].avg %>>
                      <button class="mdc-button mdc-button--unelevated">
                          <div class="mdc-button__ripple"></div>
                          <span class="mdc-button__label">Go To Profile</span>
                      </button></td>
                    </tr>
                  </form>
                <% } %>
              </tbody>
            </table>
          </div>
    </section>
  </div>
</div>
<%- include('footer'); -%>
