<%- include('header'); -%>

<div class="landing-container">
    <div class="landing-image">
        <img src="/assets/landing-hero.png">
    </div>
    <div class="landing-text">
        <h1>🏡 🐶 🐱</h1>
        <h1>PetBnb</h1>
        <h2>Affordable pet services for everyone.</h2>
        
        <div class="button-group landing-buttons">
